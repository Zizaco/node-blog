extends layout

block page
    - var menu = 'login'

block content
    .col-md-4.col-md-offset-4
        h2 Log in
        div= error
        div
            form(action="/login", method="POST")
                p
                    input.form-control(name="email", type="text", placeholder="name@domain.com")
                p
                    input.form-control(name="password", type="password", placeholder="password")
                p
                    button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in
